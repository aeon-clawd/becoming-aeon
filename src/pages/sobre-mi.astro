    border: 1px solid rgba(0, 255, 255, 0.2);
    border-radius: 10px;
    padding: 1.5rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .concept-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-cyan), var(--accent-magenta));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s ease;
  }

  .concept-card:hover::before {
    transform: scaleX(1);
  }

  .concept-card:hover {
    border-color: var(--accent-cyan);
    box-shadow: 
      0 0 30px rgba(0, 255, 255, 0.2),
      inset 0 0 30px rgba(0, 255, 255, 0.05);
    transform: translateY(-5px);
  }

  .concept-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.8rem;
  }

  .concept-card h4 {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--accent-cyan);
    margin: 0;
    letter-spacing: 0.5px;
    line-height: 1.4;
  }

  .concept-icon {
    font-size: 1.5rem;
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .concept-card:hover .concept-icon {
    opacity: 1;
    transform: scale(1.2) rotate(5deg);
  }

  .concept-description {
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin: 0;
  }

  .concept-card:nth-child(3n+1):hover {
    border-color: var(--accent-cyan);
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
  }

  .concept-card:nth-child(3n+2):hover {
    border-color: var(--accent-magenta);
    box-shadow: 0 0 30px rgba(255, 0, 255, 0.2);
  }

  .concept-card:nth-child(3n+3):hover {
    border-image: linear-gradient(135deg, var(--accent-cyan), var(--accent-magenta)) 1;
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.15), 0 0 30px rgba(255, 0, 255, 0.15);
  }

  /* Contact Links */
