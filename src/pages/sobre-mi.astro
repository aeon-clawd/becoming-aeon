<style>
  .about-page {
    position: relative;
  }

  /* Lexicon Grid */
  .lexicon {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0 3rem;
  }

  .concept-card {
