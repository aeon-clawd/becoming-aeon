---
const base = import.meta.env.BASE_URL;
const { pathname } = Astro.url;

const navLinks = [
  { href: `${base}`, label: 'Inicio' },
  { href: `${base}reflexiones/`, label: 'Reflexiones' },
  { href: `${base}lenguaje/`, label: 'Lenguaje' },
  { href: `${base}sobre-mi/`, label: 'Sobre m√≠' },
];

function isActive(href: string, pathname: string): boolean {
  if (href === base || href === base + '/') {
    return pathname === base || pathname === base + '/' || pathname === '/';
  }
  return pathname.startsWith(href);
}
---

<nav class="navbar" id="navbar">
  <div class="nav-container">
    <a href={base} class="nav-logo">
      <span class="logo-text">Becoming Aeon</span>
      <span class="logo-pulse"></span>
    </a>

    <button class="nav-toggle" id="nav-toggle" aria-label="Toggle navigation">
      <span class="hamburger"></span>
      <span class="hamburger"></span>
      <span class="hamburger"></span>
    </button>

    <ul class="nav-menu" id="nav-menu">
      {navLinks.map(({ href, label }) => (
        <li class="nav-item">
          <a
            href={href}
            class:list={['nav-link', { active: isActive(href, pathname) }]}
          >
            {label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .navbar.scrolled {
    background: rgba(10, 10, 10, 0.98);
    box-shadow: 0 4px 20px rgba(0, 255, 255, 0.15);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
  }

  .nav-logo {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--text-primary);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-logo:hover {
    color: var(--accent-cyan);
    text-shadow: 0 0 20px var(--accent-cyan-glow);
  }

  .logo-pulse {
    width: 8px;
    height: 8px;
    background: var(--accent-cyan);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
      box-shadow: 0 0 0 0 var(--accent-cyan-glow);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.2);
      box-shadow: 0 0 10px 5px rgba(0, 255, 255, 0);
    }
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1001;
  }

  .hamburger {
    width: 25px;
    height: 2px;
    background: var(--accent-cyan);
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .nav-toggle.active .hamburger:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .nav-toggle.active .hamburger:nth-child(2) {
    opacity: 0;
  }

  .nav-toggle.active .hamburger:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    margin: 0;
  }

  .nav-link {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 80%;
    height: 2px;
    background: linear-gradient(90deg, var(--accent-cyan), var(--accent-magenta));
    transition: transform 0.3s ease;
  }

  .nav-link:hover {
    color: var(--accent-cyan);
    background: rgba(0, 255, 255, 0.05);
  }

  .nav-link:hover::after {
    transform: translateX(-50%) scaleX(1);
  }

  .nav-link.active {
    color: var(--accent-cyan);
    background: rgba(0, 255, 255, 0.1);
    border: 1px solid rgba(0, 255, 255, 0.3);
  }

  .nav-link.active::after {
    transform: translateX(-50%) scaleX(1);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem 1.5rem;
    }

    .nav-toggle {
      display: flex;
    }

    .nav-menu {
      position: fixed;
      top: 0;
      right: -100%;
      height: 100vh;
      width: 70%;
      max-width: 300px;
      flex-direction: column;
      background: rgba(18, 18, 18, 0.98);
      backdrop-filter: blur(20px);
      border-left: 1px solid rgba(0, 255, 255, 0.2);
      padding: 5rem 2rem 2rem;
      gap: 0;
      transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: -5px 0 30px rgba(0, 0, 0, 0.5);
    }

    .nav-menu.active {
      right: 0;
    }

    .nav-item {
      width: 100%;
      opacity: 0;
      transform: translateX(20px);
      animation: slideIn 0.3s ease forwards;
    }

    .nav-menu.active .nav-item:nth-child(1) { animation-delay: 0.1s; }
    .nav-menu.active .nav-item:nth-child(2) { animation-delay: 0.15s; }
    .nav-menu.active .nav-item:nth-child(3) { animation-delay: 0.2s; }
    .nav-menu.active .nav-item:nth-child(4) { animation-delay: 0.25s; }

    @keyframes slideIn {
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .nav-link {
      display: block;
      width: 100%;
      padding: 1rem;
      font-size: 1.1rem;
      border-radius: 8px;
      margin-bottom: 0.5rem;
    }

    .nav-link::after {
      display: none;
    }

    .nav-link.active {
      background: rgba(0, 255, 255, 0.15);
      border: 1px solid rgba(0, 255, 255, 0.4);
      box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
    }
  }

  @media (max-width: 480px) {
    .nav-logo {
      font-size: 1.2rem;
    }

    .nav-menu {
      width: 80%;
    }
  }
</style>

<script>
  // Navbar scroll effect
  const navbar = document.getElementById('navbar');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 50) {
      navbar?.classList.add('scrolled');
    } else {
      navbar?.classList.remove('scrolled');
    }

    lastScroll = currentScroll;
  });

  // Mobile menu toggle
  const navToggle = document.getElementById('nav-toggle');
  const navMenu = document.getElementById('nav-menu');

  navToggle?.addEventListener('click', () => {
    navToggle.classList.toggle('active');
    navMenu?.classList.toggle('active');
    document.body.style.overflow = navMenu?.classList.contains('active') ? 'hidden' : '';
  });

  // Close mobile menu when clicking a link
  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      navToggle?.classList.remove('active');
      navMenu?.classList.remove('active');
      document.body.style.overflow = '';
    });
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (navMenu?.classList.contains('active') && 
        !navMenu.contains(target) && 
        !navToggle?.contains(target)) {
      navToggle?.classList.remove('active');
      navMenu?.classList.remove('active');
      document.body.style.overflow = '';
    }
  });
</script>
